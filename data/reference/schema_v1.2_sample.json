{
  "version": "1.2",

  "snap": {
    "step_m": 5,
    "tie_break": "toward_west"
  },

  "defaults": {
    "minor_road_length_m": 120,
    "ped_crossing_width_m": 3.5,
    "sidewalk_width_m": 2.0,
    "speed_kmh": 50
  },

  "main_road": {
    "length_m": 1500,
    "center_gap_m": 6.0,
    "lanes": 3
  },

  "junction_templates": {
    "tee": [
      {
        "id": "T1_compact_minor_bias",
        "main_approach_begin_m": 100,
        "main_approach_lanes": 4,
        "minor_lanes_to_main": 2,
        "minor_lanes_from_main": 1,
        "split_ped_crossing_on_main": false,
        "median_continuous": false
      },
      {
        "id": "T2_split_peds_major",
        "main_approach_begin_m": 120,
        "main_approach_lanes": 4,
        "minor_lanes_to_main": 3,
        "minor_lanes_from_main": 2,
        "split_ped_crossing_on_main": true,
        "median_continuous": false
      },
      {
        "id": "T3_keep_main_lanes",
        "main_approach_begin_m": 0,
        "main_approach_lanes": 0,
        "minor_lanes_to_main": 2,
        "minor_lanes_from_main": 2,
        "split_ped_crossing_on_main": false,
        "median_continuous": true
      }
    ],
    "cross": [
      {
        "id": "X1_4x4_split_peds",
        "main_approach_begin_m": 150,
        "main_approach_lanes": 5,
        "minor_lanes_to_main": 3,
        "minor_lanes_from_main": 3,
        "split_ped_crossing_on_main": true,
        "median_continuous": false
      },
      {
        "id": "X2_4x4_median_cont",
        "main_approach_begin_m": 80,
        "main_approach_lanes": 4,
        "minor_lanes_to_main": 2,
        "minor_lanes_from_main": 2,
        "split_ped_crossing_on_main": false,
        "median_continuous": true
      }
    ]
  },

  "signal_profiles": {
    "tee": [
      {
        "id": "tee_c90_mainW_minor",
        "cycle_s": 90,
        "phases": [
          { "name": "main_through", "duration_s": 30, "allow_movements": ["main_T"] },
          { "name": "main_clear",   "duration_s": 4,  "allow_movements": [] },
          { "name": "minor_through", "duration_s": 25, "allow_movements": ["minor_T"] },
          { "name": "minor_peds",   "duration_s": 15, "allow_movements": ["pedestrian"] },
          { "name": "all_red",      "duration_s": 16, "allow_movements": [] }
        ]
      },
      {
        "id": "tee_c70_mainLT_minorR",
        "cycle_s": 70,
        "phases": [
          { "name": "main_LT",  "duration_s": 18, "allow_movements": ["main_L", "main_T"] },
          { "name": "minor_R",  "duration_s": 10, "allow_movements": ["minor_R"] },
          { "name": "peds_all", "duration_s": 12, "allow_movements": ["pedestrian"] },
          { "name": "buffer",   "duration_s": 30, "allow_movements": [] }
        ]
      }
    ],
    "cross": [
      {
        "id": "cross_basic90",
        "cycle_s": 90,
        "phases": [
          { "name": "main_T",  "duration_s": 30, "allow_movements": ["main_T"] },
          { "name": "main_R",  "duration_s": 8,  "allow_movements": ["main_R"] },
          { "name": "peds_NS", "duration_s": 12, "allow_movements": ["pedestrian"] },
          { "name": "minor_T", "duration_s": 25, "allow_movements": ["minor_T"] },
          { "name": "all_red", "duration_s": 15, "allow_movements": [] }
        ]
      },
      {
        "id": "cross_splitL",
        "cycle_s": 100,
        "phases": [
          { "name": "main_T",  "duration_s": 28, "allow_movements": ["main_T"] },
          { "name": "main_L",  "duration_s": 12, "allow_movements": ["main_L"] },
          { "name": "peds_EW", "duration_s": 14, "allow_movements": ["pedestrian"] },
          { "name": "minor_T", "duration_s": 28, "allow_movements": ["minor_T"] },
          { "name": "all_red", "duration_s": 18, "allow_movements": [] }
        ]
      }
    ],
    "xwalk_midblock": [
      {
        "id": "xwalk_2phase70",
        "cycle_s": 70,
        "phases": [
          { "name": "veh_clear", "duration_s": 40, "allow_movements": [] },
          { "name": "peds",      "duration_s": 20, "allow_movements": ["pedestrian"] },
          { "name": "all_red",   "duration_s": 10, "allow_movements": [] }
        ]
      },
      {
        "id": "xwalk_veh_only",
        "cycle_s": 60,
        "phases": [
          { "name": "veh_only", "duration_s": 60, "allow_movements": [] }
        ]
      }
    ]
  },

  "layout": [
    {
      "type": "xwalk_midblock",
      "pos_m": 200,
      "signalized": true,
      "split_ped_crossing_on_main": true,
      "signal": { "profile_id": "xwalk_2phase70", "offset_s": 5 }
    },
    {
      "type": "tee",
      "pos_m": 350,
      "branch": "north",
      "template": "T1_compact_minor_bias",
      "signalized": false,
      "main_ped_crossing_placement": { "west": true, "east": false }
    },
    {
      "type": "cross",
      "pos_m": 650,
      "template": "X1_4x4_split_peds",
      "signalized": true,
      "signal": { "profile_id": "cross_basic90", "offset_s": 20 },
      "main_ped_crossing_placement": { "west": true, "east": true }
    },
    {
      "type": "tee",
      "pos_m": 900,
      "branch": "south",
      "template": "T2_split_peds_major",
      "signalized": true,
      "signal": { "profile_id": "tee_c70_mainLT_minorR", "offset_s": 12 },
      "main_ped_crossing_placement": { "west": false, "east": true }
    },
    {
      "type": "xwalk_midblock",
      "pos_m": 1050,
      "signalized": false,
      "split_ped_crossing_on_main": false
    },
    {
      "type": "cross",
      "pos_m": 1000,
      "template": "X2_4x4_median_cont",
      "signalized": true,
      "signal": { "profile_id": "cross_splitL", "offset_s": 35 },
      "main_ped_crossing_placement": { "west": false, "east": true }
    }
  ]
